<h2 style="text-align: center;margin-top:70px; font-size:4vh">Login</h2><br>
{{!-- login local --}}
<form action="/login" method="POST" id="form-container" style="padding:5vh" >
<div style="margin-top: 10vh;">
  <div class="form-group ">
    <input id="email" type="text" name="email"  class="form-control" placeholder="email">
  </div>

  <div class="form-group ">
    <input id="password" type="password" name="password"  class="form-control"  placeholder="Password">
  </div>
</div>

{{!-- login social --}}
 <div class="row row-cols-2" style="display: flex; justify-content:center;" >
   <div class="border col-6" >
 <img src="/images/icon-gmail.svg" height="15px" width="auto" alt="icon-google">
<a href="/auth/google">Google</a>
</div>

  <div class="border col-6" style="display: flex; justify-content:center;" >
     <img src="/images/icon-apple.svg" alt="icon-face" height="15px" width="auto">
    <a href="/auth/facebook">Facebook</a>
  </div>

</div>

   {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}
{{!-- button --}}
<br>
<button type="button" class="btn btn-success btn-lg btn-block">Success</button>
<br>

  <p class="account-message">
    Don't have an account yet?
    <a href="/signup">Signup</a> 
     </p>
</form>

