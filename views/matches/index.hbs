<nav class="position-absolute w-100 px-4 pt-3" style="z-index:5">
  <div class="d-flex justify-content-between align-items-center">
    <a data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
      <img class="rounded-circle" style="height: 50px; width: 50px;" src={{profilePicture}} alt="User Profile Page">
    </a>
  </div>
  <div class="collapse mt-2" id="collapseExample">
    <div class="card text-center text-white" id="menu-card">
      <div class="card-body">
        <h5 class="card-title mb-4">{{username}}</h5>
        <div class="container">
          <div class="row">
            <div class="col">
              <div>
                <img class="rounded-circle mx-auto d-block mb-3" style="height: 50px; width: 50px;"
                  src="images/zodiac/{{zodiacSign}}.jpg" alt="Zodiac Sign">
              </div>
              <p>{{zodiacSign}}</p>
            </div>
          </div>
          <hr>
          <div class="d-flex flex-column">
            <a href="/logout" class="btn btn-danger">Logout</a>
            <hr>
            <a href="/update/{{_id}}" class="btn btn-outline-light mb-2">Update User</a>
            <a href="/delete/{{_id}}" class="btn btn-outline-danger">Delete User</a>
          </div>
        </div>
      </div>
    </div>
</nav>

<div style="padding-top: 20%; padding-right:20px; padding-left:20px;">

  <div class="mb-3">
    {{#each notifications}}

    {{match}}

    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" id="myToast" data-autohide="false">
      <div class="toast-header">
        <img src="{{profilePicture}}" class="rounded mr-2" style="width: 20px; height: 20px" alt="Match Picture">
        <strong class="mr-auto">{{match}}</strong>
        <small>{{score}}</small>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="toast-body">
        You have a new Match. <a href="/matches/{{_id}}/{{id}}">accept</a>
      </div>
    </div>

    {{/each}}
  </div>

  {{#each matches}}

  <div>

    {{#if (idCheck matchId ../_id)}}

    <a href="/matches/{{_id}}">
      <div class="d-flex bd-highlight mb-3 position-relative rounded" style="background-color: black;">
        <div class="p-2 bd-highlight">
          <img class="rounded-circle" src="{{ownerProfilePicture}}" style="width: 50px; height: 50px;" alt="user">
        </div>
        <div class="position-absolute" style="left:43px; top:15px">
          <img class="rounded-circle" src="/images/zodiac/{{ownerZodiacSign}}.jpg" style="width: 25px; height: 25px;"
            alt="Zodiac sign">
        </div>
        <div class="p-2 pl-4 bd-highlight d-flex align-items-center">
          <p class="m-0 font-weight-bold" style="font-size: 16px;">{{ownerUsername}}</p>
        </div>
        <div class="ml-auto p-2 bd-highlight d-flex align-items-center">
          <img src="/images/arrow.svg" height="20px">
        </div>
      </div>
    </a>

    {{else}}

    <a href="/matches/{{_id}}">
      <div class="d-flex bd-highlight mb-3 position-relative rounded" style="background-color: black;">
        <div class="p-2 bd-highlight">
          <img class="rounded-circle" src="{{matchProfilePicture}}" style="width: 50px; height: 50px;" alt="user">
        </div>
        <div class="position-absolute" style="left:43px; top:15px">
          <img class="rounded-circle" src="/images/zodiac/{{matchZodiacSign}}.jpg" style="width: 25px; height: 25px;"
            alt="Zodiac Sign">
        </div>
        <div class="p-2 pl-4 bd-highlight d-flex align-items-center">
          <p class="m-0 font-weight-bold" style="font-size: 16px;">{{matchUsername}}</p>
        </div>
        <div class="ml-auto p-2 bd-highlight d-flex align-items-center">
          <img src="/images/arrow.svg" height="20px">
        </div>
      </div>
    </a>

    {{/if}}

    {{/each}}

  </div>
</div>

<nav class="navbar fixed-bottom navbar-dark" id="bottom-nav">
  <div class="container">
    <div class="row justify-content-between w-100">
      <div class="col-4 btn-nav-bottom">
        <a class="d-flex flex-column justify-content-center" href="/matches">
          <img src="/images/heart.svg" style="height: 25px;">
          <p class="mt-2">Matches</p>
        </a>
      </div>
      <div class="col-4">
        <a class="d-flex flex-column justify-content-center" href="/dashboard">
          <img src="/images/today.svg" style="height: 25px;">
          <p class="mt-2">today</p>
        </a>
      </div>
      <div class="col-4">
        <a class="d-flex flex-column justify-content-center" href="/make-a-match">
          <img src="/images/conver.svg" style="height: 25px;">
          <p class="mt-2">Make a match</p>
        </a>
      </div>
    </div>
  </div>
</nav>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script>
  $(document).ready(function () {
    $("#myToast").toast('show');
  });
</script>