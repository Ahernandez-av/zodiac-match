<div class="swiper-container" style="padding-top: 20%">
  <div class="swiper-wrapper">
    {{#each matches}}
    <div class="swiper-slide d-flex justify-content-center">
      <div class="d-flex flex-column w-75" id="match-card">
        <div class="d-flex justify-content-center mb-2">
          <img src="{{matchProfilePicture}}" style="height:90px; width:90px;" alt="Match Photo" class="rounded-circle">
        </div>
        <div class="mb-3 text-center">
          <h3>{{matchUsername}}</h3>
        </div>
        <div class="d-flex justify-content-start align-items-center mb-4 sign">
          <img src="images/{{matchZodiacSign}}.png" style="height:12px width:12px;" class="mr-2">
          <p>{{matchZodiacSign}}</p>
        </div>
        <div class="mb-4">
          <p>{{report}}</p>
        </div>
        <div class="mb-4">
          <p class="score-title">Score</p>
          <p class="score">{{score}}</p>
        </div>
        <form action="/matches" method="post" class="d-flex justify-content-center">
          <input type="text" name="matchId" value="{{matchId}}" style="display:none">
          <input type="text" name="matchUsername" value="{{matchUsername}}" style="display:none">
          <input type="text" name="matchZodiacSign" value="{{matchZodiacSign}}" style="display:none">
          <input type="text" name="matchProfilePicture" value="{{matchProfilePicture}}" style="display:none">
          <input type="text" name="ownerUsername" value="{{ownerUsername}}" style="display:none">
          <input type="text" name="ownerZodiacSign" value="{{ownerZodiacSign}}" style="display:none">
          <input type="text" name="ownerProfilePicture" value="{{ownerProfilePicture}}" style="display:none">
          <input type="number" name="score" value="{{score}}" style="display:none">
          <input type="text" name="report" value="{{report}}" style="display:none">

          <button class="btn">Make Match</button>
        </form>
      </div>
    </div>
    {{/each}}
  </div>
</div>



